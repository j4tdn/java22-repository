package baitap;

import java.util.Scanner;

public class Ex06 {
	public static void main(String[] args) {
		int a = 0;
		int b = 0;
		int c = 0;
		nhapSoNguyen(a);
		nhapSoNguyen(b);
		nhapSoNguyen(c);

	}

	public static int nhapSoNguyen(int number) {
		Scanner scanner = new Scanner(System.in);

		if (scanner.hasNextInt()) {
			int number = scanner.nextInt();
			if(number >= 0 && number <20) {
				number = number ;
			}
			else {
				System.out.println("Số ko nằm trong khoảng cho phép ,vui lòng nhập lại");
				scanner.next();
				int number = scanner.nextInt();
			}
		} else {
			System.out.println("Nhập lại số Nguyên");
			scanner.next();
			int number = scanner.nextInt();
		}
		return number;
	}
}
